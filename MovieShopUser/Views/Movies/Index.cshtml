@model IEnumerable<MovieShopDLL.Entities.Movie>

@{
    ViewBag.Title = "Index";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 my-header">
            <h2 class="h2-frontIndexUser">Click at the film to see the details.</h2>
        </div>
    </div>
</div>
    <div class="container">
        <div class="row">
            @foreach (var film in Model)
            {
                <a href="../Movies/Details/@film.Id">
                    <div class="col-md-2 classWithPad text-center"><img class="movie_img_165x200" src="@film.ImageUrl" /><br/>@film.Title</div>
                </a>
            }
        </div>
    </div>
